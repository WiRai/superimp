{
  "name": "superimp",
  "version": "0.0.8",
  "description": "A simple composer for javascript objects",
  "main": "index.js",
  "scripts": {
    "compile": "rm -rf lib/*; babel -d lib/ src/;",
    "buildDoc": "rm -rf doc/*; jsdoc -c jsdoc.json;",
    "deploy": "npm run test && npm run buildDoc;",
    "flow": "flow; test $? -eq 0 -o $? -eq 2;",
    "jest": "jest;",
    "test": "npm run flow && npm run compile && npm run jest && codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WiRai/superimp.git"
  },
  "author": "WiRai",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^15.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "codecov": "^1.0.1",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^11.0.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-flowtype": "^2.16.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsdoc": "^2.3.1",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "flow-bin": "^0.32.0",
    "jest-cli": "^15.1.1",
    "jsdoc": "3.4.0",
    "jsdoc-babel": "^0.2.1"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
