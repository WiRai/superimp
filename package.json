{
  "name": "superimp",
  "version": "1.0.0",
  "description": "A simple composer for javascript objects",
  "main": "index.js",
  "scripts": {
    "compile": "rm -rf lib/*; babel -d lib/ src/;",
    "buildDoc": "rm -rf doc/*; jsdoc -c jsdoc.json;",
    "coverage": "nyc --reporter=lcov npm run mocha",
    "deploy": "npm run test && npm run buildDoc;",
    "dev": "watchman-make --make='npm run' -p src -t compile -p lib -t mocha -p src -t flow",
    "flow": "flow; test $? -eq 0 -o $? -eq 2;",
    "mocha": "mocha --opts ./mocha.opts",
    "test": "npm run flow && npm run compile && npm run coverage && codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WiRai/superimp.git"
  },
  "author": "WiRai",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^15.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^11.0.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-flowtype": "^2.16.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsdoc": "^2.3.1",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "flow-bin": "^0.32.0",
    "jsdoc": "3.4.0",
    "jsdoc-babel": "^0.2.1",
    "mocha": "^3.0.2",
    "nyc": "^8.1.0"
  }
}
